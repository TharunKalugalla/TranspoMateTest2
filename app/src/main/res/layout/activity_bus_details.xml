<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BusDetailsActivity">

    <TextView
        android:id="@+id/textViewBusDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Details"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewSeatsAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seats Available"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonReserveSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve Seat"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonViewBusLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Bus Location"/>

    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"/>

</LinearLayout>